<div class="chat-header">
 <div class="left-header">
    <div class="header-title">

            <h1>diary</h1>      
    </div>
  </div>
  <div class="right-header">
    <div class="header-button">
 
    </div>
  </div>
</div>

<div class="calendars">
  <p id="notice"><%= notice %></p>

 


  <br>



  <%= month_calendar events: @diaries do |date, diaries| %>
    <%= date.day %>

    <% diaries.each do |diary| %>
      <div>
        
        <%= link_to diary.title, diary_path(diary.id) %> 
      </div>
    <% end %>
  <% end %>
</div>




  <%= form_with(model: @diary, url: diary_index_path, method: :post, local: true, class: 'form') do |f| %>
  <div class="diary-hed form-group" >
    <%= f.label :日付, class: 'diary-lavel' %>
    <%= f.date_field :start_time, value: Time.now.strftime("%Y-%m-%d"), class: 'date-select form-control' %>
    <%= f.label :タイトル, class: 'diary-lavel' %>
    <%= f.text_field :title, class: 'text-input form-control' %>
    <%= f.submit '保存', class: "btn btn-default form-submit" %>
  </div>

    <div class="diary-content form-group">
      <%= f.label :content, class: 'diary-lavel' %>
      <%= f.text_area :content, class: "diary-text" %>
    </div>
  <% end %>
<%#= render 'form', event: @diary %>

